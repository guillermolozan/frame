	

// header
header
	@media $large
		height auto !important	
	nav
		background-color lighten(#357bb2,10)
		height auto
		line-height @height
		@media $large
			position relative !important
			background-color menu_top_bgcolor
		.button-collapse
			color white
		h1
			display none
		.brand-logo
			img
				height 25px
				@media $small
					height 20px
					margin-top 10px
			@media $large
				opacity 0
				width maxwide
				height header_height
				margin-top unquote('-'+ header_height)
				img
					width 100%
					height 100%
		a
			text-transform uppercase
	@media $large		
		&::before
			display block
			background header_bg
			height header_height	
			content ""	
			width 100%
			




.menu_top
	height 2.7em
	line-height @height
	margin-top 0px
	display block
	li
		// max-width 120px
		height 100%
		// vertical-align middle
		display inline-block
		// background-color red
		a
			text-align center
			vertical-align middle
			display inline-block
			color menu_top_textcolor
			font-weight 400
			font-size 0.84em
			height auto
			line-height 1.4em
			padding 0 6px
			&:hover
				text-decoration none
		&:hover, 
		&.active
			background-color rgba(black,0.2);
	&:after
		content ""
		height 10px
		width 100%
		position absolute
		bottom -10px		
		left 0





.menu
	// background red !important
	> li
		// background-image linear-gradient(top,transparent,lighten(color2,15))
		position relative
		margin-right 2px
		a:hover
			color inherit !important
		// &:hover:before
		// 	content ""
		// 	position absolute
		// 	width 0
		// 	height 0
		// 	border-left 7px solid transparent
		// 	border-right 7px solid transparent
		// 	border-bottom 5px solid white
		// 	bottom 0px
		// 	left 50%			
		.submenu
			display none
			position absolute
			top 100%
			left 0px
			background white
			min-width 100%
			width auto
			z-index 5
			> li
				display block
				width 100%
				border-bottom 1px solid lighten(color6,40)
				&:last-child
					border-bottom 0
				>a
					color black
					display block
					white-space nowrap
					height 25px
					line-height @height
					font-size 0.8em
					&:hover
						color black !important
		&:hover
			.submenu
				display block
				
		





.menu_left	
	li
		border-bottom 1px solid color6
		&:last-child
			border-bottom 0
		a
			line-height 1.5em !important
			height auto !important
			padding-top 1em
			padding-bottom 1em
			display block
			vertical-align middle
			// &.collapsible-header
			// 	font-weight bold
	.collapsible-body
		li
			border-bottom 0
			a
				margin-left 1em
				color color1
				font-weight normal				
			&.active
				background-color lighten(#ddd,4)
				a
					color black
	&.collapsible-accordion
		li.collapse
			padding 0
			






		
@media $large
	body.headfixed
		padding-top 151px
		header
			nav
				// background rgba(#357bb2,0.9)
				background white			
				position fixed !important
				top 0px
			&::before
				display none
			li
				a
					font-size 0.80em
					color black
				&.logo
					padding 0 0.5em
					a
						display inline-block
						width 120px
						height auto
						color transparent
						background url(imgs+'logo.png') no-repeat
						background-size contain
						line-height 100%
						margin-top 0.1em
					&:hover
						background-color transparent
						a
							color transparent	!important

					


			

