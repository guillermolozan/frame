	.home_gallery // clientes
		
		height 580px
		padding-top .25rem
		// background_opacity('fondo-clientes.png',.8)
		.container
			padding 0
		h2
			font-size 2em
			text_border(black)
			color white !important
		.card
			display flex
			flex-direction column-reverse
			height auto !important
			// over_shadow()
			.card-image
				height 150px !important
				@media $small
					height auto !important
					margin 0 15%
				border-radius 10px !important
				background white !important
				// fit_image(150px)
				.photo
					padding 8px
			.card-content
				a.btn
					white-space nowrap
					background-color initial !important
					height auto !important
					line-height initial !important
					

	.home_block_planes
		h2
			margin-bottom 1em
			color color1
			// text-decoration underline
			// text-shadow 0px 4px 3px rgba(0,0,0,0.6), 0px 8px 0px rgba(0,0,0,0.1);
			text-align center
			font-size 1.5em
			font-weight 400
		.card
			.card-title
				color color3 !important
			.card-content
				padding-bottom 100px !important
			

	.experiencia // la mejor experiencia en ingenieria
		z-index 10
		background white
		h3
			margin-top 2em
			margin-bottom 1em
			color color1
			// text-decoration underline
			// text-shadow 0px 4px 3px rgba(0,0,0,0.6), 0px 8px 0px rgba(0,0,0,0.1);
			text-align center
			font-size 1.5rem !important
			font-weight 400
		h4
			color #0198FF
			font-size 2em
		p 
			font-size 0.95em
			color lighten(black,50)
			img
				width 123px
				margin 5px 9px 9px 0
				height auto 
				float left 
				



		
	.comienza //parallax
		@media $small-medium 
			padding 0 1em
		height 450px
		p,h2,h6 
			color white !important
			font-weight 300
		h2
			font-size 3em
			margin-top 0.5em
			margin-bottom 0.5em
			text-align center
			font-weight 400
			@media $small-medium 
				font-size 1.1em
				margin-bottom 0em
						
