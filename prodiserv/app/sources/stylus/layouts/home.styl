	.line_a // la mejor experiencia en ingenieria
		h3
			margin-top 2em
			margin-bottom 1em
			color color1
			// text-decoration underline
			// text-shadow 0px 4px 3px rgba(0,0,0,0.6), 0px 8px 0px rgba(0,0,0,0.1);
			text-align center
			font-size 1.5em
			font-weight 400
		h4
			color #0198FF
			font-size 2em
		p 
			font-size 0.95em
			color lighten(black,50)
			img
				width 123px
				margin 5px 9px 9px 0
				height auto 
				float left 
				
	.line_two //planes de hosting
		h2
			padding-left 10px
			font-size 1.2em
			font-weight bold
			margin-bottom 0.2em
		.btn	
			position absolute
			right 1em
			bottom 3em
			text-transform initial
			
		> div
			> div
				&:nth-child(2)
					.card:before
						background-image url('http://prodiserv.com/img/hosting_economico.jpg') 
				&:nth-child(3)
					.card:before
						background-image url('http://prodiserv.com/img/hosting_empresa.jpg') 
				&:nth-child(4)
					.card:before
						background-image url('http://prodiserv.com/img/hosting_corporativo.jpg') 
				&:nth-child(5)
					.card
						&:before
							background-image url('http://prodiserv.com/img/hosting_ilimitado.jpg') 															
				.card
					min-height 200px
					&:before
						background-position left bottom
						position absolute
						width 100px
						height 110px
						bottom -5px
						left -5px
						z-index 0
						content ""		
					.card-content	
						padding-right 10px	
						padding-bottom 100px
						@media $large
							min-height 420px
						@media $small-medium 
							min-height 365px
						@media $small 
							min-height 0
						.card-title
							color color5
							font-size 1.05em
							line-height 120%
							font-weight bold
						ul
							padding-left 1.4em
							li
								font-size 0.9em
								margin-bottom 0.2em
								&:before
									font-family icomoon
									content "\e682"
									color color1
									float left
									margin-left -20px
								&.price
									color color1
									font-size 1.2em
									font-weight bold
									float right
									margin-right 9px
									&:before
										content ""




		
	.line_three //parallax
		@media $small-medium 
			padding 0 1em
		height 450px
		margin-bottom 20px
		p,h2,h6 
			color white
			font-weight 300
		h2
			font-size 3em
			margin-top 0.5em
			margin-bottom 0.5em
			text-align center
			font-weight 400
			@media $small-medium 
				font-size 1.1em
				margin-bottom 0em
						
		h2 + p
			margin-bottom 1em
			font-weight 300
			font-size 1em
			text-align center
			
		h6
			margin-top 15px
		h6 + p
			font-weight 300
			margin 0
			strong 
				color #A7D746
				

	.line_four // noticias
		.card
			min-height 300px
			.card-title
				h3
					color color5			
		.block_three
			.card
				padding-top 3em
		.block_one
			li
				padding-bottom 0.5em
				padding-top 0.5em
				border-bottom 1px solid lighten(grey,30)


	.line_b //clientes
		height 500px
		@media $small
			height auto
		h3
			color darken(white,5)
			text-shadow 0px 4px 3px rgba(0,0,0,0.8), 0px 8px 0px rgba(0,0,0,0.1);
			text-align center
			font-size 1.5em
		.col
			text-align center
			@media $small
				text-align left
				padding 0 6em
			img
				width 198px
				// height 147px
				border-radius 27px
				@media $small
					display inline-block
					vertical-align text-top
					margin-bottom 1em
			h4
				margin-top 0
				margin-bottom 1em	
				border-radius 27px
				font-size 0.9em
				@media $small
					display inline-block	
					margin-left 1em			
		a.more
			float right
			margin-right 20px
			@media $small
				margin-bottom 20px



