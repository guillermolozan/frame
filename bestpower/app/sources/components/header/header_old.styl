.menu_top
	height auto
	// line-height @height
	margin-top 0px
	overflow visible
	padding-left 10%
	padding-right 10%
	background-color white
	box-shadow 0 0 4px rgba(0, 0, 0, 0.25)
	border 1px solid #eee
	z-index 1000
	// overflow-y hidden
	// display block
	display flex
	justify-content center
	li
		// background white
		flex-grow 1
		flex-shrink 1
		flex-basis auto
		text-align center
		position relative
		
		border-width 0 1px 0 0
		border-color darken(#eee,10) !important
		border-style none dotted none none
		&:last-child
			border-width 0
		// icomoon('e64b')
		&:before
			position absolute
			bottom 22px
			left 40%
			font-size  1em
			height 0px
		// max-width 120px
		height 100%
		// vertical-align middle
		display inline-block
		// background-color red
		a
			text-align center
			vertical-align middle
			display inline-block
			color menu_top_textcolor
			font-weight 700
			font-size 1em
			font-family Roboto
			height auto
			// line-height 1.1em
			padding 0.54em 0em
			// padding 2.9em 0
			background inherit
			width 100%
			// border-radius 8px
			// background lighten(red,45)
			// @media only screen and (max-width : 1100px )
			// 	padding-left 1.8em
			// 	padding-right @padding-left
			// background lighten(yellow,45)
			&:hover
				text-decoration none
		&:hover, 
		&.active
			background-color #fff //submenu
			a
				// background-color rgba(black,0.1);
				background-color menu_top_item_active_bgcolor //submenu
				color menu_top_item_active_textcolor
		&.logo
			background transparent !important
			// margin-top 10px
			a
				// display inline-block
				width logo_width
				height 100%
				color transparent
				background url(imgs+logo_img) no-repeat 0 center
				background-size 100%
