//font

html 
	font-family Roboto,'Open Sans', sans-serif;
	// font-size 1.05em
	@media $small
		font-family Roboto, sans-serif
		font-size 1.05em
		
.preheader,
.p-home .line_a,
.p-home .servicios
footer,
.footerpre2
	font-family Roboto,Dosis,Roboto, sans-serif
h1,h2,h3
	font-family Montserrat,Roboto,Neucha, sans-serif !important
	// text-transform uppercase !important
	color black !important
	letter-spacing -0.5px
h3
	font-size 15px !important
	font-weight bold
p
	color #999 !important

.p-home
	h2 
		font-size 28px !important

	
.menu_top > li > a
	font-family Montserrat,Roboto,Neucha, sans-serif !important
	font-size .9em !important
.post
	font-family Roboto,Dosis, sans-serif
	






.collection
	.collection-item
		padding 7px 5px
		a
			display block
			font-weight 400
			font-size 1em
			// color color5
		&.active
			background-color lighten(black,40)
			color white
			a
				color inherit
			



#scrolltop
	text-align center
	margin 0 auto
	color transparent
	display inline-block
	width 39px
	height @width
	background url(imgs+'arrow_up.png') no-repeat center 50% #0077BD
	margin-bottom 1em
	cursor pointer


.btn
	background-color rgba(#357BB2, 1) !important
	&:hover
		background-color rgba(color1, 1)
form
	.input-field 
		label
			color black
	.group
		font-weight 700
		margin-top 1.5em
		color color1
		text-transform uppercase
	
// main,footer
	// background-color lighten(color6,60)
	

article
	> div
		font-size 1em
		strong
			font-weight 500
			

.p-emails
	.wide
		text-align center
		.lines
			display inline-block
			margin 0 auto
			a
				display block
				margin 0
				padding 0
				img
					margin 0
					padding 0
					display block

.p-forms
	h2
		font-weight bold

.p-pages.p-1 
	// h1
	// 	display none
	h2
		font-size 1.2em
		font-weight bold


figure.responsive-img
	// max-height 500px
	overflow hidden
	width 100% !important
	margin 0
	text-align center
	vertical-align middle
	max-height 300px
	img
		height auto !important
		margin-top 0%
		width 106% !important
		margin-left -3%
		@media $small-medium
			max-width bannerwide
		@media $large
			width 100% !important
			margin-left 0%



@media $large
	.p-projects.p-detail.p-2 figure.responsive-img img
		margin-top -47%
	.p-projects.p-detail.p-1 figure.responsive-img img
		margin-top -17%
	.p-projects.p-detail.p-3 figure.responsive-img img
		margin-top -16%


.p-forms, .p-pages
	.card, .card-panel
		box-shadow none


.mfp-bottom-bar
	position inherit !important
	.mfp-title
		span
			width 176px
			height 106px
			top 40px
			left 0
			position absolute
			display block
			background-color transparent
			&.vendido
				background-image url(imgs+'vendido.png')
			&.separado
				background-image url(imgs+'separado.png')
	.mfp-counter
		top initial !important
		bottom 0

h1,h2
	text-transform initial

.p-contactenos
	h2	
		font-size 1.5rem

@media $large
	.p-post-venta,.p-contactenos
		figure.responsive-img img
			margin-top -10%
	.p-vende-tu-terreno
		figure.responsive-img img
			margin-top -10%
	.p-proyectos-entregados
		figure.responsive-img img
			margin-top -9%

					

.p-servicios
	.collection .collapsible-body > ul > li.active
		background-color #383bd4 !important
		> a
			color white !important

.p-pages
	.collection .collection-item.active
		background-color #bb1d1f !important
		
