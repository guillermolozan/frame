					// color #959595 !important
					color #000 !important
					text-transform capitalize
					font-size 1.3em
			.slick-slide:focus
				outline 0
			.slick-dots
				display none !important
			.slick-arrow
				position absolute
				top 52%
				width 17px
				height 30px
				z-index 2
				background-color transparent
				color transparent
				border 0
				// opacity .9
				cursor pointer
				&.slick-prev
					left -50px
					background-image url(imgs+'arrow_left.png')
					@media $small
						left 15px
				&.slick-next
					right -50px
					background-image url(imgs+'arrow_right.png')
