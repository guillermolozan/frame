.form_contact
	.row: .col.s12
		+card_sended(message)
	.row
		div(class="col l6 m12 s12"): p
			if(web_phone)
				| Tel√©fono: #{web_phone} #[br]
			if(web_email)
				| E-mail: #{web_email} #[br]
			div(id="map",
				data-name="#{map.name}",
				data-lat="#{map.lat}",
				data-lon="#{map.lon}",
				data-text="#{map.text}")

		div(class="col l6 m12 s12 form")
			form(method="post",name="frm")
				.col
					if(main)
						h1 #{title}
					else
						h2 #{title}
						-main=false
				+form('frm',fields)
				+input_submit('ENVIAR')


