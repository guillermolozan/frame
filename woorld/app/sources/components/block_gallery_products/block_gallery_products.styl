.block_gallery_products //productos estrella
	// background transparent url(imgs+'maiz.jpg') repeat left center
	height auto
	padding-bottom 1em
	background #fff
	// display none !important
	@media $small-medium
		height auto
	.container
		@media $large
			padding 0 3em 3em 3em
		background #c9cdd0 url(imgs+'bg_lineas.png') repeat-x center bottom;
		display flex
		// padding 0 12%
		@media $small-medium
			flex-direction column
		@media $large
			flex-wrap wrap
			justify-content space-between
		// .col
		> h2
			width 100%
			text-align center
			color red
			font-weight bold
			font-family Merriweather !important
			@media $large
				margin-top 50px
				margin-bottom 40px
			@media $small-medium
				text-align center
		> ul.row
			margin-top 0
			margin-bottom 0
			// width 100%
			@media $large
				order 3
			@media $small-medium
				padding-left 1em
				padding-right 1em
			li.col
				.card
					border-radius 10px
					overflow hidden
					@media $small-medium
						max-width 800px
						height auto
						min-height initial
						margin-left auto
						margin-right auto
					a
						width 100%
						font-weight bold
					.card-image
						border 10px solid #fff
						border-bottom 0
						fit_image(180px)
						@media $small
							height auto
						img
							// visibility hidden
							transition opacity .25s,transform .25s
							// max-height 100%
					.card-content
						.btn
							background-color color1
					&:hover
						box-shadow 0 2px 10px 0 rgba(#000,.96), 0 2px 20px 0 rgba(#000,.12)
						.card-image
							img
								transform scale(1.1)
								opacity .8
				@media $large
					&:nth-child(4)
						display none
		> a
			margin-top 34px
			font-weight 400
			background-color color2
			@media $small-medium
				margin 10px auto
				width auto

