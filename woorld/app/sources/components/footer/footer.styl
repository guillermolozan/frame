footer
	background color1
	height auto
	margin-top 0px !important
	padding-bottom 2em
	// display none
	// overflow hidden
	@media $small-medium	
		padding-left 1em
		padding-right 1em
		height auto
	.container
		.menu
			a,span
				color white
			> li
				float none
				line-height 2em
		.first,.second
			@media $large
				position relative
				&:after
					content ""
					width 2px
					height 140px
					background #999 
					position absolute
					right 30px
					top 1.3em
			@media $small-medium
				border-bottom 1px solid #999
		.third
			margin-top .5em
			li.circle
				postion relative
				padding-left 50px
				padding-bottom 1em
				&:before
					text-align center
					position absolute
					z-index 1
					left 0
					width 30px
					
				&:after
					content ""
					margin-right .5em
					border-radius 50%
					// border 1px solid color2
					background color2
					width 34px
					height @width
					display inline-block
					position absolute
					left 0
			li.facebook
				icomoon('e673')
				&:before
					font-size 1.5em
					top 0px
					color white
			li.email
				icomoon('e679')
				&:before
					font-size 1.3em
					top 3px
					left 2px
					color white
