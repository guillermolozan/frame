			// 	float right	
			// 	text-align right
			// 	line-height 1.7em
			// 	margin-top 1.3em
			// 	text-shadow 2px 2px rgba(black,0.5);
		&.headerfixed
			nav
				height 32px !important
				background none
				position fixed !important	
				div.nav-wrapper
					display none
				div.menu
					background-color color1
					background-image linear-gradient('top',#f00,darken(color1,10))
				&:after
					display none	
					


@media only screen and (max-width : breakpoint_tablet)
	header
		nav
			background-image none !important
			


