.block_local
	padding 0 .7rem 1em !important
	width 100%
	h3
		text-align center
	.noshow
		display none
	&:after
		content ""
		height 2px
		width 95%
		background #666
		display block
		margin 0px auto 20px
	&:last-child:after
		display none
	&:last-child
		> .row
			margin-bottom 0
	> .row
		.galle
			.foto
				position relative
				.zoom
					display block
				// arrows
				.slider
					.sy-pager
						display none
					.sy-slide
						height 370px !important
						overflow hidden
						@media $small
							height 210px !important
					.sy-controls
						visibility visible
						z-index
						.sy-prev > a:after,.sy-next > a:after
							transform scale(1);
							border-radius 0
							opacity .8
							// background color2
							// color white
							// height 15px
							// line-height 18px
							// width 13px
							// font-size 13px
							// transform scale(2,4);
							// content "\e651"
							color transparent
							width 28px
							height 61px
							background url(imgs+'flecha.png') no-repeat 0px 0px
							transform rotate(0deg)
						.sy-next > a:after
							transform rotate(180deg)
							// transform scale(2,4);
							// content "\e654"
				// a.zoom
				.orange
					position absolute
					bottom 0px
					width 35%
					height 100px
					opacity .3
					background url(imgs+'water.png') no-repeat 0px 10px
					@media $small
						display none
						height 70px
						background-position center 0px
					// display none
				.name
					position absolute
					color black
					bottom 7px
					left 0px
					width 35%
					text-align center
					// font-size 26px
					text_border(#fff)
					font-size 25px
					color #ff6600 !important
					font-weight bold
					font-family arial
					@media $small
						text-align center
						width 100%
						left 0
						bottom 0
				.more
					position absolute
					color black
					bottom 50px
					right 15px
					border-radius 0
					border 1px solid #fff
					// font-size 26px
					// text_border(#fff)
					font-size 20px
					color #fff !important
					height 35px
					line-height @height
					padding 0 10px
					opacity .8
					@media $small
						display none
					// font-weight bold
					// font-family arial						
			.train
				> div
					width 25%
					float left
					margin-right 3px
