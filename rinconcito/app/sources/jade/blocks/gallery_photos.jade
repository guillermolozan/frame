-items  = gallery.items
-name   = gallery.name
-sub    = gallery.sub

if(items)
	div(class="galleries section scrollspy",id="gallery-photo-#{index}")
		h1 #[i(class="icon-pictures")] #{name}
		h5 #{sub}
		div(class="row")
			each item in items
				div(class="col #{responsive}") 
					div(class="item z-depth-1")
						div.img
							if(item.name)
								img(src="#{item.img}",
									class=" materialboxed responsive-img",
									alt="#{item.name}",
									title="#{item.name}",
									data-caption="#{item.name}")
							else
								img(src="#{item.img}",
									class=" materialboxed responsive-img")
						h6 #{item.name}	

