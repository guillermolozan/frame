.home_gallery
	// background-color #000 !important
	h2
		text-align center
	.container
		@media $large-medium
			padding-left 12%
			padding-right 12%
		.items
			text-align center
			display flex
			flex-wrap wrap
			justify-content center
			.col
				.card
					// margin 0
					background none
					box-shadow initial
					height auto
					text-align center
					// border-radius 20px
					// border 1px solid #000
					@media $medium-large
						display flex
						align-items center
						overflow hidden
						height 100px
						@media $large
							overflow hidden
							height 80px
					text-align center
					.card-content
						padding 0 0 .4em
						.btn
							background-color color1
							padding 0 .5em
							white-space nowrap
					.card-image
						fit_image(80px)
						@media $small
							height auto
							border-radius 20px
