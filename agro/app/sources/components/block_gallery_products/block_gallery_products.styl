.block_gallery_products //productos estrella
	background transparent url(imgs+'maiz.jpg') repeat center center
	background-size contain
	height auto
	padding-bottom 1em
	@media $small-medium
		height auto
	.container
		display flex
		@media $small-medium
			flex-direction column
		@media $large
			flex-wrap wrap
			justify-content space-between
		// .col
		> h2
			@media $large
				margin-top 50px
				margin-bottom 40px
			@media $small-medium
				text-align center
		> ul.row
			margin-top 0
			margin-bottom 0
			// width 100%
			@media $large
				order 3
			@media $small-medium
				padding-left 1em
				padding-right 1em
			li.col
				.card
					border-radius 10px
					@media $small-medium
						max-width 800px
						height auto
						min-height initial
						margin-left auto
						margin-right auto
					a
						width 100%
						font-weight bold
					.card-image
						padding 20px 20px 0
						img
							transition opacity .25s,transform .25s
					&:hover
						box-shadow 0 2px 10px 0 rgba(#000,.96), 0 2px 20px 0 rgba(#000,.12)
						.card-image
							img
								transform scale(1.1)
								opacity .8
				@media $large
					&:nth-child(4)
						display none
		> .row.center
			> a.btn
				margin-top 34px
				font-weight 400
				background-color color2
				@media $small-medium
					margin 10px auto
					width auto

