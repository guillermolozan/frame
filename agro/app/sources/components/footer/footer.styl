footer
	background #38af2f url(imgs+'grass_green2.jpg') bottom center repeat-x
	height auto
	margin-top 0px !important
	padding-bottom 2em
	// display none
	// overflow hidden
	@media $small-medium	
		padding-left 1em
		padding-right 1em
		height auto
	.container
		@media $large
			display flex
			align-items flex-start
			justify-content space-between
		> ul
			@media $large
				margin-top 20px
			margin-right 9.3em	
			> li
				list-style none
				position relative
				margin-bottom 4px
				&.icon-circle
					margin 15px 0
					position relative	
					content ''
					width 34px
					height @width
					border-radius 50%
					background-color white
					overflow hidden
					a
						display block
						width 100%
						height 100%
						float left
						margin 0
						padding 0
						position relative
						z-index 0
						color transparent !important
						&:before
							content ""
					&:hover
						background-color black
						a
							color transparent !important
					&:before
						color #67BDBC
						position absolute
					&.facebook
						icomoon('e673')
						&:before
							font-size 1.5em
							top 3px
							left 3px
					&.youtube
						icomoon('e674')
						&:before
							font-size 1.4em
							top 6px
							left 6px
					&.twitter
						icomoon('e66c')
						&:before
							font-size 1.4em
							top 6px
							left 6px
				h3
					color #000
					font-weight 700
					font-size 1em
					@media $large
						margin-top 1em
						margin-bottom 1em
				a,span
					color white
					font-weight 400
				a
					padding-left 10px
					&:before
						content "."
						color white
						position absolute
						left -2px
						bottom 0px
						font-size 2em
					&.prodiserv
						float left
						color #000
						&:hover
							color white
						&:before
							content ""
							
	
