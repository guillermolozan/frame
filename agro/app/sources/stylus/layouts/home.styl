.p-home	



	.home_tierra //foto texto // papa huairo
		height auto
		background #3A3A3A url(imgs+'grass_grey.jpg') bottom center repeat-x
		margin-bottom 0px
		.container
			.col
				&.photo
					@media $small
						margin-top 1em
					img
						margin-bottom -7px
				&.texto
					padding 10px 40px 0
					@media $small-medium
						// text-align justify
						padding-top 0
					@media $small
						padding 0px 10px 3em
					text-align left
					line-height 1.32em
					font-size 1.1em
					font-weight 400
					p
						color #eee
					a
						color #eee
						display block
						margin-top 30px
						@media $small-medium
							margin-top 1em

					
	.home_certificacion
		.container
			display flex
			flex-wrap wrap
			flex-direction row
			align-items center
			h3
				display block
			figure
				width 23%
				flex-grow 0
				@media $small-medium
					width 100%
				// width auto
			p.certificacion
				width 55%
				// flex-grow: 2
				color #000
				display inline-block
				@media $small-medium
					width 100%
			h2
				margin-top 1em
				margin-bottom 0
				width 100%
			p.contactenos
				width 100%
				font-weight 400
				text-align center
			a
				margin 1em auto 2em
				font-weight 400
		animation_from_down(6,.6s)



	.home_gallery // clientes
		padding-top .25rem
		background-color initial
		// background_opacity('fondo-clientes.png',.8)
		h2
			// text-shadow 3px 4px 5px #000
			text_border(black)
			color lighten(green,70) !important
		.container
			.row
				li.col
					margin-left initial
					.card
						over_shadow()
						border-radius 10px !important
						background-color white
						.card-image
							background white !important
							.photo
								padding 8px
							a.btn
								white-space nowrap