menu_logo      ='logo.jpg'
menu_font_size =14px
menu_height    =40px

menu_bg        =white
menu_color     =white

menu_bg_over   =#1aabe0
menu_color_over=white





header_customize()
	header nav > .container > .menu_top > li.logo a
		@media $small-medium
			transform scale(.8) !important
		@media $small
			transform scale(.6) !important
	@media $large
		header
			> nav
				box-shadow initial
				// background transparent !important
				background #194D74 url(imgs+'bgline.png') repeat-x !important
				> .container
					// background white
					> .menu_top
						display flex
						justify-content center
						> li
							margin 0 1px 0 0
							border-bottom 0
							&.active,&:hover
								border-bottom 0
							> a
								padding 0 35px
								// font-weight bold
							&:after
								display inline-block
								content "|"
								color white
								margin-left -1px
							&:last-child:after
								display none
		body.headfixed
			header
				> nav
					// background menu_bg
					background white !important
					opacity .9
					// box-shadow initial
					> .container
						background transparent !important
						border 0
						
						> .menu_top
							> li
								> a
									height menu_height
									line-height @height
									// color menu_color !important
									color black !important
								&.active,&:hover
									background menu_bg_over
									> a
										color menu_color_over !important
								&.logo
									background initial !important
									> a
										width 90px
										margin-top -10px
										color transparent !important
										transform scale(1,1.5)
										



.prenav
	@media $medium-small
		display none
	text-align center
	transition all .6s
	.container
		transition inherit
		display flex
		line-height initial
		align-items center
		justify-content space-between
		> a.logo
			text-align left
			transition inherit
			position relative
			width auto
			height auto
			background transparent
			flex-grow 0
			display inline-block
			margin 12px 0
			width 100%
			@media $small-medium
				display block
				text-align center
			a
				padding 0
				text-align left
				@media $small-medium
					text-align center
				img
					transition inherit
					transform scale(1)
			@media $small-medium
				margin 0
				img
					height 50px
			@media $large
				img
					width auto
					height auto


