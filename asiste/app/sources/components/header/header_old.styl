

// header
header
	.container
		position relative
		.menutext
			display none
			@media $small-medium		
				display inline-block
				margin-left 2%
				color #8d949f
				font-size 1.1em
				margin-top -3px
		ul.second_menu
			float right
			position absolute
			top 40px
			right 40px
			li
				display inline-block
				float none
				a
					color black
					font-size .8em
					display inline-block
				&:after
					display inline-block
					content "|"
					color black
					margin-left 8px
				&:last-child:after
					display none
			@media $small-medium
				float none
				width 100%
				text-align center
				right 0
				top 108px
				li
					a
						font-size 9px
						text-transform capitalize
			@media $small
				display none
						
					
					
	@media $large
		height auto !important	
	.list 
		position absolute
		right 0px
		bottom 80px 
		height auto
		display block
		width auto
		li
			color black
			display block
			position relative
			heigh auto
			margin-left 1em
			overflow hidden
			transform rotate(9deg)
			transition transform 0.5s
			border-radius 0 12px 12px 0
			&:hover
				transform rotate(-9deg)
			a
				position relative
				display block
				border-radius 2px 12px 12px 2px
				font-size 22px
				margin 0 0 0 40px
				height 55px
				width auto
				line-height @height
				box-shadow initial
				font-weight 700
				z-index 1
				padding-left 1em
				background #D8385E
				color white
				text-shadow 2px 2px #000
				&:before
					content ""
					background inherit
					height 45px
					width @height
					position absolute
					border-radius 30%
					left -22px
					top 5px
					transform rotate(45deg)
					z-index -1
				&:after
					content ""
					height 15px
					width @height
					border-radius 50%
					background white
					position absolute
					z-index 2
					left -15px
					top 18px
				&:hover
					background color6
					color white
					text-decoration none

			&:hover
				background-color inherit
		a
			text-transform uppercase
			
	nav
		background white
		height auto
		line-height @height
		transition background 1s
		top 0px
		// @media $large
		// 	position relative !important
		// 	background-color menu_top_bgcolor
		.button-collapse
			color #8D949F
			height 51px
			line-height 51px
			margin-top -10px
			float right
			margin-bottom 10px
		h1
			display none
		.brand-logo
			img
				height 25px
				@media $small
					height 20px
					margin-top 10px
			@media $large
				opacity 0
				width maxwide
				height header_height
				margin-top unquote('-'+ header_height)
				img
					width 100%
					height 100%
		a
			text-transform uppercase
		.container
			border-right 0
			border-left 0
		@media $large
			> .container::before
				display block
				background white url(imgs+'logo.jpg') no-repeat 32px 16px
				height 98px
				// background-size 13%
				content ""	
				width 100%
		@media $small-medium	
			> .container::before
				display none
				background white url(imgs+'logo.jpg') no-repeat center 8px
				background-size 213px 121px
				height 152px
				content ""
				width 100%
		@media $small
			> .container::before
				background-size 148px 84px
				height 103px
	&.navbar-fixed
		@media $small-medium	
			height 219px
		@media $small
			height 165px

.menu_top
	height 2em
	line-height @height
	margin-top 0px
	display block
	// background-color #194D74
	// background-image linear-gradient(top,menu_top_bgcolor,darken(menu_top_bgcolor,10))	
	background #194D74 url(imgs+'bgline.png') repeat-x
	li
		padding-right 2em
		padding-left 2em		
		position relative
		// icomoon('e64b')
		&:after
			position absolute
			top 0.4em
			right 0px
			height 1.3em
			width 0px
			border-left 1px solid white
			content ""
		// max-width 120px
		height 100%
		// vertical-align middle
		display inline-block
		// background-color red
		a
			text-align center
			vertical-align middle
			display inline-block
			color menu_top_textcolor
			font-weight 400
			font-size 1em
			transition font-size .5s
			height auto
			line-height 1.4em
			padding 0 6px
			&:hover
				text-decoration none
		&:hover, 
		// &.active
			background-color rgba(black,0.2);
			// border-bottom 3px solid #A6D644 //#D9385F //#A6D644
		&:last-child:after
			display none
		.submenu
			li:after
				display none
			
	&:after
		content ""
		height 10px
		width 100%
		position absolute
		bottom -10px		
		left 0





