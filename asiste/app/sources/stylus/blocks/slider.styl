// banner
.outslider
	background #021727
	overflow hidden
.slider
	container_center()
	width 1340px
	margin-top 0px
	height 450px !important
	overflow hidden
	@media $small-medium	
		width 100%		
	.indicators
		// background white
		// display none
		position relative
		bottom 30px
		z-index 2
		.indicator-item
			width 24px
			height 24px
			font-weight bold
			border 3px solid #000
			@media $small
				display none			
			// list-style-type decimal
		.indicator-item.active
			background-color black
			border 3px solid #fff
			color white
	.slides li 
		opacity 0
		transition opacity 2s	
		background white			
		.caption
			top 15px
			left -1px
			width 494px
			height 300px
			background transparent url(imgs+'caption.png') no-repeat 
			padding-top 47px
			text-align center
			padding-right 80px
			@media $small-medium
				width 100%
				background rgba(darken(blue,50),0.5)
				padding-right 0
			.texto1 a
				border 2px solid #6BBDE1
				border-radius 15px
				padding 0.17em 16px
				color #6BBDE1
				font-size 1.9em
				text-align center
				font-weight bold
				display inline-block
				min-width 350px
				margin-left -1000%
				transition margin-left 1s
			.texto2 a
				color white
				font-size 1.7em
				text-align center
				font-weight bold
				margin-top 13px
				display inline-block
				padding 0 1em
				margin-left -1000%
				transition margin-left 1.5s
			.texto3 a
				margin-top 10px
				color #bcd7e4
				font-size 2.4em
				display inline-block
				padding 0
				line-height 1.2em
				// max-width 200px
				margin-left -1000%
				transition margin-left 2s
		&.active
			img
				opacity 1
			.texto1 a
				margin-left 0
			.texto2 a
				margin-left 0
			.texto3 a
				margin-left 0
	
