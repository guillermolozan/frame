.block_gallery_products //productos estrella
	// background transparent url(imgs+'productos-ardyss-bg.jpg') repeat;
	ul.row
		> .col
			padding 0 0.25rem
		// display none
	// background transparent url(imgs+'maiz.jpg') repeat left center
	height auto
	padding-bottom 1em
	// background #fff
	// display none !important
	@media $small-medium
		height auto
	.container
		@media $large
			padding 0 0em 3em 0em
		// background #fff
		display flex
		// padding 0 12%
		@media $small-medium
			flex-direction column
		@media $large
			flex-wrap wrap
			justify-content space-between
		// .col
		.items
			width 100%
		> h2
			width 100%
			text-align center
			color #0066CC
			font-weight bold
			font-family Roboto !important
			// text_border(#fff)
			// font-size 25px
			// color #ff6600 !important
			// font-weight bold
			// font-family arial
			@media $large
				margin-top 50px
				margin-bottom 40px
			@media $small-medium
				text-align center
		> ul.row
			margin-top 0
			margin-bottom 0
			// width 100%
			@media $large
				order 3
			@media $small-medium
				padding-left 1em
				padding-right 1em
			li.col
				.card
					border-radius 1px
					overflow hidden
					border solid 1px #5fc6ec
					box-shadow initial
					@media $small-medium
						max-width 800px
						height auto
						min-height initial
						margin-left auto
						margin-right auto
					a
						width 100%
						font-weight bold
					.card-image
						border 0px solid #fff
						border-bottom 0
						// fit_image(180px)
						@media $large-medium
							image_centered(180px)
						@media $small
							image_centered(270px)
						// z-index 0
						// @media $small
						// 	height 270px
						img
							// visibility hidden
							transition opacity .25s,transform .25s
							// max-height 100%
					.card-content
						// z-index 0
						padding 0
						background #f7f7f7
						padding 8px 8px 4px 8px !important
						height 90px
						position relative
						.btn
							background initial
							color #333
							line-height 18px
							font-size 13px
							font-weight normal
							border-radius 0
							box-shadow initial
							height 55px
						.precio
							color #fff
							text-align center
							font-weight normal
							font-size 16px
							background #346284
							// margin-bottom 10px
					&:hover
						box-shadow 0 2px 10px 0 rgba(#000,.96), 0 2px 20px 0 rgba(#000,.12)
						.card-image
							img
								transform scale(1.1)
								opacity .8
				// @media $large
				// 	&:nth-child(4)
				// 		display none
		> a
			margin-top 34px
			font-weight 400
			background-color color2
			@media $small-medium
				margin 10px auto
				width auto

