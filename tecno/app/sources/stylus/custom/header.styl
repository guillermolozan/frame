// header
header
	background black
	.prenav .container > a.logo
		text-align center
	> nav 
		background-color red !important
		@media $medium-small
			background-color black !important
		.button-collapse
			color #fff
	@media $medium-small
		box-shadow inset 0 -5px 10px rgba(black,.5) !important
	.menu_top 
		> li 
			> a 
				font-family Roboto
				font-weight bold !important
				padding-left 3em !important
				padding-right 3em !important
				font-size 15px !important
			.submenu > li
				border-bottom 1px solid color2
			&.brand-logo
				@media $small
					margin 0
					img
						height 38px !important
			&.der2
				@media $medium-small
					display none !important
			&.facebook > a
				icomoon('e673')
				&:before
					font-size 1.5em
			&.instagram > a
				icomoon('ea92')
				&:before
					font-size 1.4em
			@media $medium-small
				&.logo a
					transform scale(1) !important
	@media $small-medium
		nav > .container .menu_top
			> li.facebook,> li.instagram
				display: block;
				a
					color menu_bg_over
					padding 0 .7em
					font-size 13px
					&:hover
						text-decoration: none
			> li.facebook
				top -3px
@media $large
	body.headfixed
		header
			height auto !important
			nav
				background black !important
				> .container
					> .menu_top
						> li
							padding 0 0px
							&.brand-logo
								transform scale(1) !important							
							> a
								color white !important
