
.p-home

	// .line_wide
	// 	background url(imgs+'header-lines.jpg')
	// 	height 10px
	// 	width 100%
	.back
		width 100%
		height 555px
		background white url(imgs+'bodybg.png') no-repeat 0px 160px
		position absolute
	.fondo
		background #26b88b url(imgs+'bodybg2.jpg') repeat-x
		min-height 409px
		opacity .85
	.contacto
		text-align center
		ul.numeros
			display flex
			@media $small
				display block
			li
				@media $small
					width 100%
					margin-bottom 2em
				flex-grow 1
				flex-shrink 1
				flex-basis auto
				// border 1px solid black
				float left
				min-width 80px
				&:before
					content ""
					width 80px
					height 82px
					display block
					background transparent no-repeat
					margin 0 auto
				strong
					display block
					text-align center
					font-weight bold
					font-size 1.5em
				span
					display block
					text-align center
					font-size 1.2em
				&.fijo:before
					background-image url('https://icip.edu.pe/sites/all/themes/rebirth/images/icon-entel.png')
				&.rpm:before
					background-image url('https://icip.edu.pe/sites/all/themes/rebirth/images/icon-fijo.png')
				&.rpc:before
					background-image url('https://icip.edu.pe/sites/all/themes/rebirth/images/icon-entel.png')
				&.wsp:before
					background-image url('https://icip.edu.pe/sites/all/themes/rebirth/images/icon-whatsapp.png')
		a.email
			display inline-block
			background rgb(0, 159, 212)
			color white
			padding .5em 2em
			border-radius 15px
			font-size 2em
			font-weight bold
			margin-top 1.5em
	.nosotros
		background #1c72b5
		h2
			font-size 1.3em
			text-align center
			color white
			position relative
			font-weight bold
			&:after
				content ""
				height: 2px;
				position: absolute;
				bottom: -10px;
				left: 0;
				right: 0;
				margin: auto;
				opacity: 0.5;
				background-image linear-gradient(to left,rgba(0,0,0,0) 0%,rgba(255,255,255,1) 50%,rgba(0,0,0,0) 100%)	
		ul
			li
				text-align center
				margin-bottom .7em
				a
					color white
	.line_one
		background #D6F3FD
		background #0A7BC1
		height 97px
		text-align center
		a	
			margin-top 2em
			position relative
			display inline-block
			color white
			&:before
				content ''
				background url(imgs+'arrow_down.png') no-repeat center 0px
				width 100%
				height 17px
				bottom -22px
				position absolute
			&:hover
				text-decoration none

	.line_two
		// background 
		// height 623px
		height auto
		text-align center
		.responsive
			margin-top 5em
			display inline-block
			width 1110px
			@media $medium-small
				width 740px
				@media $small
					width 370px
			.slick-slide
				position relative
				margin 0 35px
				&.ite
					width 300px
					text-align center
					.status
						position absolute
						// margin-left -2px
						width 100%
						height 39px
						// background url(imgs+'status.png') no-repeat
						color black
						text-align left !important
						padding 4px 0 0 5px
						font-size 16px
						font-weight bold
					img
						width 100% !important
					// margin 0 -1px
				h4.name
					color white !important
					// text-transform uppercase
					position relative
					padding-bottom 1em
					// border-bottom 1px solid #0077bd
					font-size 1.4em
					font-weight bold
					@media $small
						font-size 1.7em
				h5.distrito
					// color #959595 !important
					color #000 !important
					text-transform capitalize
					font-size 1.3em
			.slick-slide:focus
				outline 0
			.slick-dots
				display none !important
			.slick-arrow
				position absolute
				top 52%
				width 17px
				height 30px
				z-index 2
				background-color transparent
				color transparent
				border 0
				// opacity .9
				cursor pointer
				&.slick-prev
					left -50px
					background-image url(imgs+'arrow_left.png')
					@media $small
						left 15px
				&.slick-next
					right -50px
					background-image url(imgs+'arrow_right.png')
					@media $small
						right 15px
				// width 50%
				// padding 0 25%










