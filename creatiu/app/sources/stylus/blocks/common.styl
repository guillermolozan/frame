article
	> div
		font-size 1em
		strong
			font-weight 500
			

.p-emails
	.wide
		text-align center
		.lines
			display inline-block
			margin 0 auto
			a
				display block
				margin 0
				padding 0
				img
					margin 0
					padding 0
					display block

.p-forms
	h2
		font-weight bold

.p-pages.p-1 
	// h1
	// 	display none
	h2
		font-size 1.2em
		font-weight bold


figure.responsive-img
	// max-height 500px
	overflow hidden
	width 100% !important
	margin 0
	text-align center
	vertical-align middle
	max-height 300px
	img
		height auto !important
		margin-top -7%
		width 106% !important
		margin-left -3%
		transition width 1s,margin-left 1s
		@media $small-medium
			max-width bannerwide
			margin-top 0 !important
		@media $large
			&:hover
				width 100% !important
				margin-left 0%
	img
		height auto !important
		margin-top -7%
		width 106% !important
		margin-left -3%
		@media $small-medium
			max-width bannerwide
		@media $large
			width 100% !important
			margin-left 0%

@media $large
	.p-projects.p-detail.p-2 figure.responsive-img img
		margin-top -47%
	.p-projects.p-detail.p-1 figure.responsive-img img
		margin-top -17%
	.p-projects.p-detail.p-3 figure.responsive-img img
		margin-top -16%


.card, .card-panel
	box-shadow none


.mfp-bottom-bar
	position inherit !important
	.mfp-title
		span
			width 176px
			height 106px
			top 40px
			left 0
			position absolute
			display block
			background-color transparent
			&.vendido
				background-image url(imgs+'vendido.png')
			&.separado
				background-image url(imgs+'separado.png')
	.mfp-counter
		top initial !important
		bottom 0

h1,h2
	text-transform initial

.p-contactenos
	h2	
		font-size 1.5rem

@media $large
	.p-post-venta,.p-contactenos
		figure.responsive-img img
			margin-top -10%
