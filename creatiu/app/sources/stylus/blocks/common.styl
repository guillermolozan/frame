
.collection
	.collection-item
		padding 7px 5px
		a
			display block
			font-weight 400
			font-size 0.85em
			// color color5
		&.active
			background-color lighten(black,40)
			color white
			a
				color inherit
			

footer
	background rgb(15, 103, 164)
	height 90px
	line-height @height
	@media $medium-small
		height auto
		line-height inherit
	text-align center
	color white
	a
		color inherit
		&:hover
			text-decoration none
	.container
		display inline-block
		line-height 1.6em
	li
		a
			color white !important	
	.submenu
		a
			color black !important


#scrolltop
	text-align center
	margin 0 auto
	color transparent
	display inline-block
	width 39px
	height @width
	background url(imgs+'arrow_up.png') no-repeat center 50% #0077BD
	margin-bottom 1em
	cursor pointer


.btn
	background-color rgba(#357BB2, 1) !important
	&:hover
		background-color rgba(color1, 1)
form
	.input-field 
		label
			color black
	.group
		font-weight 700
		margin-top 1.5em
		color color1
		text-transform uppercase
	
