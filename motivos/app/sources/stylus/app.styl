			right -1000%
			transition right 0.5s
			left initial
			// @media $small-medium 
			// 	right 0
			img
				height 500px
				width 600px		
		.texto_izquierda
			position absolute
			display block
			top 0%
			width 25%	
			left -1000%
			transition left 1.1s
			height 500px
			// @media $small-medium 
			// 	left 0
