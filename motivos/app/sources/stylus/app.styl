// header
header
	nav
		background-color white //rgb(157, 25, 23)
		background-size 1000px 180px
		a
			text-transform capitalize
			font-size 0.7em
		.button-collapse
			color color2
		.brand-logo img
			height 54px	
			visibility visible			

.menu_top
	a
		color color2
		font-weight 700
		font-family Arial
		&:hover
			color color1

.menu_left	
	li
		border-bottom 1px solid rgba(red,0.2)
	a
		color color1
		font-weight bold

			
.menu
	// background red !important
	> li
		// background-image linear-gradient(top,transparent,lighten(color2,15))
		position relative
		margin-right 2px
		a:hover
			color inherit !important
		.submenu
			display none
			position absolute
			top 100%
			left 0px
			background white
			min-width 100%
			width auto
			> li
				display block
				width 100%
				border-bottom 1px solid color6
				&:last-child
					border-bottom 0
				>a
					color black
					display block
					white-space nowrap
					height 40px
					line-height @height
					&:hover
						color black !important
		&:hover
			.submenu
				display block
				

							
