				color navy
				font-size 0.7em
				font-family Lobster, cursive
				text-shadow:3px 3px 0 #fff,-1px -1px 0 #fff,  1px -1px 0 #fff,-1px 1px 0 #fff,1px 1px 0 #fff;
				&:hover
					color #0191DB !important
		@media $small
			.texto_izquierda
				display none
				background white
				width 90%
				padding 0 1em
				text-align center
				top 3%
				left 5%
				border-radius 10px
				opacity 0.8 !important
				overflow hidden
				a
					font-size 0.8em
			.imagen_derecha
				display none
				right 30%
	.slides li.active
		> img
			opacity 1
		.imagen_derecha
			right -10%
		.texto_izquierda
			left 2%


			
