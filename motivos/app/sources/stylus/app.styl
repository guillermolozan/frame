	.indicators
		@media $small-medium
			display none
		.indicator-item
			width 24px
			height 24px
			font-weight bold
			// list-style-type decimal
		.indicator-item.active
			background-color color1
			color white
	.slides li 
		> img
			opacity 0
			transition opacity 2s
		background white
		// container_center()
		.movil
			display none
