.p-home
	> section 
		width 100%
		text-align center
		margin-bottom 0px
		color #525252
		font-weight 100
		font-size 1.1em	
		margin-top 10px		
		h2,h3,p
			color #525252
		h2
			font-size 2em
		h3
			font-size 1.6em
		.btn
			background-color #3A2F73
			width 264px
			height 58px		
			line-height @height
					
	.line_two //productos estrella
		background-color #F6F6F6
		height 634px
		@media $small-medium
			height auto
		.titl
			.col
				h3
					margin-top 50px
					margin-bottom 70px
					text-align left
					margin-left 85px
					@media $small-medium
						margin-left 0
						text-align center
						margin-bottom 10px
						margin-top 40px
				a
					margin-top 34px
					margin-left 130px
					font-weight 400
					@media $small-medium
						margin-left 0px
						margin-top 20px
						margin-bottom 20px
					
		> div
			max-width 1300px
			width 100%
			@media $small-medium
				width 100%
			text-align center
			display inline-block
		.row
			.col 
				padding 0 2.9em					
		.prods
			.col
				> div
					width 100%
					min-height 356px
					background-color transparent
					border-radius 10px
					position relative
					@media $small-medium
						margin-bottom 4em				
						max-width 800px
						display inline-block
					a
						position absolute
						bottom -2px
						left 13%
						width 79%
						border-radius 8px
						background-color #67BDBC
						font-size 1.3em
						font-weight 400
						height 2.4em
						padding-left 0
						padding-right 0
						&:hover
							background-color #3B2E76
							text-decoration none								
					img
						width 340px
						height auto

					
	.line_three //tierras
		position relative
		&:before,&:after
			content ""
			width 2px
			height 104px
			background-color #EEEEEE
			position absolute
			left 50%
		&:before
			top 0				
		&:after
			bottom 0
		height 572px
		background-color white
		h3
			margin-top 4.6em
		p 
			margin-top 3.9em
			
		a
			color #525252
			margin-top 50px
			display block
	
	.line_four //foto texto // papa huairo
		height auto
		background #3A3A3A url(imgs+'grass_grey.jpg') bottom center repeat-x
		.col
			&.photo
				text-align right
				background #3A3A3A
				height 100%
				overflow hidden
				padding 0
				img
					margin-bottom -7px
			&.texto
				padding 114px 40px 0
				@media $small-medium
					padding-top 1em
				@media $small
					padding-bottom 3em				
				text-align left
				line-height 1.32em
				font-size 1.1em
				font-weight 400
				p
					color #eee
				a
					color #eee
					display block
					margin-top 40px
					@media $small-medium
						margin-top 1em

					
				
				
	.line_five //comprar productos
		height 380px
		@media $small-medium
			height auto		
			padding-bottom 2em
		background-color white
		h2
			margin-top 3.2em
			margin-bottom 0
		p 
			margin-top 0.5em
			font-weight 400
		a
			margin-top 1.7em
			font-weight 400

