// header
header
	@media $medium-small
		nav 
			box-shadow inset 0 -5px 10px rgba(black,.5) !important
	.menu_top 
		> li 
			> a 
				font-family Roboto
				font-weight normal !important
			.submenu > li
				border-bottom 1px solid color2
			&.brand-logo
				@media $small
					margin 0
					img
						height 38px !important
			&.facebook > a
				icomoon('e673')
				&:before
					font-size 1.5em
			&.instagram > a
				icomoon('ea92')
				&:before
					font-size 1.4em
	@media $small-medium
		nav > .container .menu_top
			> li.facebook,> li.instagram
				display: block;
				a
					color menu_bg_over
					padding 0 .7em
					font-size 13px
					&:hover
						text-decoration: none
			> li.facebook
				top -3px