					content ""
					background inherit
					height 45px
					width @height
					position absolute
					border-radius 30%
					left -22px
					top 5px
					transform rotate(45deg)
					z-index -1
				&:after
					content ""
					height 15px
					width @height
					border-radius 50%
					background white
					position absolute
					z-index 2
					left -15px
					top 18px
				&:hover
					background color6
					color white
					text-decoration none

			&:hover
				background-color inherit
		a
			text-transform uppercase
			
