.wide
	.collapsible
		border-top 1px solid white
		border-right 1px solid white
		border-left 1px solid white
		box-shadow none
		.collapsible-header
			border 1px solid #ccc
			border-radius 5px
			margin-bottom 10px
			font-size 1.2em
			&:before
				float right
				font-size 1.05em
				color grey
				font-weight normal
			icomoon('f0a3')
		.collapsible-body
			border-bottom 1px solid white
			font-size 1em
			p
				padding-top 0.3rem
					
.collection
	.collection-item
		padding 7px 5px
		a
			display block
			font-weight 400
			font-size 1em
			color color1
			// color color5
		&.active
			background-color lighten(black,40)
			color white
			a
				color inherit
			

