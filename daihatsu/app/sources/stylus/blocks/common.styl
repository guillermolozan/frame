figure.responsive-img
	// max-height 500px
	overflow hidden
	width 100% !important
	margin 0
	text-align center
	vertical-align middle
	max-height 300px
	img
		height auto !important
		// margin-top -7%
		width 106% !important
		margin-left -3%
		transition width 1s,margin-left 1s
