footer
	// background url(imgs+'footer-daihatsu2.png') repeat-x top center
	background #CF050D
	height auto
	padding 1.5em 0 .5em
	@media $small
		height auto
	nav
		clear both
		text-align center
		height footer_height
		line-height footer_height
