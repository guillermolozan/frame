	.collapsible
		border-top 1px solid white
		border-right 1px solid white
		border-left 1px solid white
		box-shadow none
		.collapsible-header
			border 1px solid #ccc
			border-radius 5px
			margin-bottom 10px
			font-size 1.2em
			&:before
				float right
				font-size 1.05em
				color grey
				font-weight normal
			icomoon('f0a3')
		.collapsible-body
			border-bottom 1px solid white
			font-size 1em
			padding-left 1em
			.html
				padding 1em
				p
					padding 0 0 1rem 0
			.btn
				background #697f8a !important

