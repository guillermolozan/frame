.p-home
	@media $large
		main
			margin-bottom 0
			background-color lighten(#EAEAEA,5)
			
			.links
				// background-color black
				.card-panel
					padding-bottom 0
					padding-top 0.6em
				h2
					margin 0
				.responsive	
					padding-bottom 0
					padding-top 0
					.ite
						text-align center
						position relative
						padding 0 10px !important
						height 75px
						&:focus
							outline none			
						a
							height 40px !important
							line-height @height
							vertical-align middle
							img
								display inline-block
								max-height 40px
						h4
							height 10px 
							line-height @height
							text-align center
							display block
							position absolute
							bottom 0px
							width 100%
							color #9a9a9a
						

		.bar
			h1,h2
				font-size 1em
				font-weight bold
			h3
				font-size 0.9em
			h4,h5
				font-size 0.9em
				// margin-bottom 0.4em
			h6
				margin-top 0.5em
			&.sidelef
				.card
					min-height 0
					padding-left 30px
					background white url(imgs+'arrow.png') no-repeat
					h4
						min-height 0.65em
						line-height @min-height
						vertical-align middle
						font-size 1em
						color #02337a
			&.sideright
				h4
					margin-top 0
					color #02337a
					font-weight 400
					// max-height 2.1em
					// overflow hidden
				.more
					color #02337a
					font-size 1.2em
					font-weight 500
				
		.post
			h2
				font-size 0.9em
				margin 0
			.card-panel
				min-height 467px
				p
					font-size 0.93em
				
		.homefooter
			
			background-color #014087
			a,p
				color white !important		
			ul
				// border-color darken(color2,4)
				border-color transparent !important
				
				li
					background-color #014087
					// border-color inherit !important
					border-color inherit !important
					margin-bottom 0.7em
					padding-bottom 0.5em
					a
						font-size 0.9em
						overflow hidden
						max-height 3em
						display block
			.block_one
				li	
					border-bottom 1px solid #e0e0e0 !important
					a
						font-size 0.95em
				a.more
					color color6 !important
					text-decoration underline
					
					
			.block_two
				.card-content
					padding-bottom 0
					ul
						margin-bottom 0
						li
							margin-bottom 0.2em
			
			.block_four
				.card-content
					padding-left 5px
					padding-right 5px
					font-size 0.9em
					p strong
						color #40b3ff
			
			div
				background-color inherit !important
				border-color transparent !important
				// box-shadow none
			.card
				background-color #014087
				min-height 270px
				li
					font-size 0.9rem
					
			h3
				font-size 1.2rem
				margin 0
				margin-bottom 0.5em
				color color6
				text-align center
				
	.homefooter
		.block_one
			li	
				padding-bottom 0.5em
				padding-top 0.5em
				border-bottom 1px solid #e0e0e0 !important
		.card
			min-height 0
			