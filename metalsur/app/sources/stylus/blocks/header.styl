

// header
header
	margin-top -20px
	@media $small-medium
		margin-top -10px
	// border-bottom 10px solid #586998
	@media $large
		height auto !important	
	nav
		border-top 10px solid #586998
		.container
			position relative		
		box-shadow none
		background-color white
		height auto
		line-height @height
		@media $large
			position relative !important
			background-color menu_top_bgcolor
		.button-collapse
			color color2
		h1
			display none
		.brand-logo
			background url(imgs+'header-bg.jpg') no-repeat 10px 20px
			opacity 1 !important
			@media $small-medium
				background transparent
			img
				display none
				height 45px
				margin-top 5px
				@media $small-medium	
					display block
				// @media $small
				// 	height 34px
				// 	margin-top 10px
				// 	@media only screen and (max-width : 500px)
				// 		height 25px
				// 		margin-top 15px
				// 		@media only screen and (max-width : 300px)
				// 			height 15px
				// 			margin-top 20px
			@media $large
				opacity 0
				width maxwide
				height header_height
				margin-top unquote('-'+ header_height)
				img
					width 100%
					height 100%
					
		.list 
			position absolute
			right 10px
			top -105px 
			li
				color black
				display block
				clear both
				height 22px
				icomoon("e683")
				&:before
					color red
					font-size 1em
					margin-right 0.3em
				a
					display block
				&:hover
					background-color inherit
			a
				text-transform uppercase
			
	@media $large		
		&::before
			display block
			background header_bg
			height header_height	
			content ""	
			width 100%
			




.menu_top
	// height menu_top_height
	height 37px
	margin-top 0px
	display block
	margin-bottom
	> li
		> a
			&:before,&:after
				content ""
				width 0
				height 0
				border-style solid
				position absolute
				bottom 0
			&:before
				border-width 10px 0 0 10px
				border-color transparent transparent transparent #fff
				left 0
			&:after
				border-width 0 0 10px 10px
				border-color transparent transparent #fff transparent
				position absolute
				right 0			
	li		
		height auto
		&:last-child
			&:after
				border-left 0px
		background-color #586998
		a
			color white
			font-weight 400
			font-size 0.9rem
			height menu_top_height
			line-height @height
			// top 5px
			position relative
			text-transform uppercase
			&:hover
				text-decoration none
		&.active
			background-color #D9231B
			a
				color white






.menu
	// background red !important
	> li
		// background-image linear-gradient(top,transparent,lighten(color2,15))
		position relative
		margin-right 15px
		&:hover
			background-color #D9231B
		a:hover
			color white !important
		.submenu
			display none
			position absolute
			top 100%
			left 0px
			background white
			min-width 100%
			width auto
			> li
				display block
				width 100%
				border-bottom 1px solid color6
				&:last-child
					border-bottom 0
				> a
					color white
					display block
					white-space nowrap
					height 40px
					line-height @height
					&:hover
						color black !important
		&:hover
			.submenu
				display block
				
		





.menu_left	
	li
		border-bottom 1px solid color6
		&:last-child
			border-bottom 0
		a
			line-height 1.5em !important
			height auto !important
			padding-top 1em
			padding-bottom 1em
			display block
			vertical-align middle
			// &.collapsible-header
			// 	font-weight bold
	.collapsible-body
		li
			border-bottom 0
			a
				margin-left 1em
				color color1
				font-weight normal				
			&.active
				background-color lighten(#ddd,4)
				a
					color color2
	&.collapsible-accordion
		li.collapse
			padding 0
			






		
@media $large
	body.headfixed
		padding-top header_height + menu_top_height
		header
			nav
				position fixed !important
				// border-bottom 10px solid #005ba1
				top 0px
			&::before
				display none
					


			

