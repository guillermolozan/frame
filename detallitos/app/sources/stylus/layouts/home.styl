	.line_a // la mejor experiencia en ingenieria
		padding 3em 0
		@media $small-medium
			padding 0
		h2
			font-size 2em
		h3
			margin-top 2em
			margin-bottom 1em
			color color1
			// text-decoration underline
			// text-shadow 0px 4px 3px rgba(0,0,0,0.6), 0px 8px 0px rgba(0,0,0,0.1);
			text-align center
			font-size 1.5em
			font-weight 400
		h4
			color #0198FF
			font-size 2em
		p 
			font-size 1.2em
			color lighten(black,50)
			text-align center
			img
				width 123px
				margin 5px 9px 9px 0
				height auto 
				float left 2

		
	.servicios
		background #ffeedd !important
		text-align center
		> .container > .row > .col
			padding 0 15px
			margin 10px 0
			@media $large
				float none
				display inline-block
				min-height 411px
				zoom(1.1)
				padding 0 40px
			@media $small-medium
				padding 0 15px
			.card
				// transition border-radius .5s, box-shadow .5s, background-color .5s, margin .2s
				transition all .6s
				background-color white
				border-radius 10px
				overflow hidden
				margin 0
				over_shadow_4()
				@media $large
					max-width 270px
				.card-image
					@media $large-medium
						fit_image(160px)
						height 160px
						// overflow hidden
					@media $small
						height auto
				.card-content
					@media $large
						height 200px
						overflow hidden
						padding 0 10px 10px 
						p 
							font-size 0.95em
							text-align justify
							height 100px
							overflow hidden
					@media $small-medium
						height auto
					.mas
						// text-decoration none
						text-align right
						background color1
						color white
						float right
						padding .1em .8em
						margin 15px 0
						border-radius 10px
		h4
			color #000
			font-size 1.5em
			font-weight bold
			text-align center

	



