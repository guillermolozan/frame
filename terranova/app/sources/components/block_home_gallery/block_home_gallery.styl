.block_gallery_photos
	border-radius 13px
	border 7px solid color2
	margin-bottom .5em
	margin-top .5em
	h2
		border-radius 7px 7px 0 0
		color #fff
		background-color color1
		font-weight bold
		margin 0
		padding .6em 1em
		@media $large
			font-family Arial
			font-size 12px
		@media $small-medium
			text-align center
	ul.row
		margin .5em .15rem
		li.col
			padding 2px
			.block,.card
				display flex
				align-items center
				justify-content center
				overflow hidden
				height 140px
				margin-top 0px
				@media $small
					height 70px
					// height auto
				@media $large
					height 65px
					border 3px solid #287ca6
					margin-bottom 5px
				// padding 10px
				a
					margin-top 5px
					display inline-block
					@media $large
						margin-left -28px
						margin-right -28px