.block_home_video // border-radius 13px
	border 1px solid color1
	margin-bottom .5em
	margin-top .5em
	overflow hidden
	border-radius 7px
	h3,h2,h1
		color #fff
		background-color color1
		font-weight bold
		margin 0
		padding .6em 1em
		@media $large
			font-family Arial
			font-size 12px
		@media $small-medium
			text-align center
	ul.responsive
		position relative
		// text-align right
		margin 0
		// .slick-list
			// margin-left -1px
		li
			display inline-block
			margin 0
			padding 0
			.card
				margin 0
				.card-content
					padding 0
					position absolute
					z-index 10
					bottom 0
					width 100%
					a.btn
						display block
						// width 100%
						background #000
						color #fff
						padding 2px 6px
						font-size 12px
						// margin-left 2px
						font-family Arial
						// margin-top -50px
						
	button.slick-arrow
		position absolute
		top initial
		left initial
		right initial
		bottom 0px
		z-index 1
		color transparent
		// font-size 0
		line-height 1.6em
		background transparent
		border 0
		// margin-top 10px
		&:before
			width 27px
			height @width
			border 1px solid #000
			border 0
			display block
			color #fff
			font-size 2em
			vertical-align middle
			background color1
		&.slick-next,&.slick-prev
			top 0px
		&.slick-next
			right 3%
			&:before
				content ">"
		&.slick-prev
			left 3%
			&:before
				content "<"
