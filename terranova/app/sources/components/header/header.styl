// header
header
	transition height 5s !important
	height auto !important
	.container
		background #fff
		position relative
		@media $small-medium
			padding 0
		> .row
			margin-bottom 0
			margin-left 0
			margin-right 0
			// > .col.l8
			// 	background #418eb3 //temp
			// 	&.content-banner
			// 		background-image linear-gradient(left,white,white,white,white,#418eb3)
	nav
		padding-top 5px
		margin-top 0px
		// background lighten(#357bb2,10)
		background-color #fff
		height auto
		line-height 25px
		transition background 1s
		top 0px
		vertical-align middle
		a
			color #00659D
			font-weight bold
			font-family arial
		> .row
			margin-bottom 0
		@media $small-medium
			overflow hidden
		@media $large
			position relative !important
			background-color #fff
			box-shadow initial
			border-top 3px solid color1
		.button-collapse
			color color1
	.brand-logo
		img
			// height 25px
			@media $small-medium
				height 112px
				margin-top -28px
			@media $small
				margin-top -25px
				height 90px
		@media $large
			// opacity 0
			width 311px
			height header_height
			display block
			// margin-top unquote('-'+ header_height)
			img
				width 100%
				height 100%
	h1
		display none

			

	.menu_top
		height 25px
		line-height @height
		margin-top 0px
		display block
		display flex
		justify-content center
		// &:before
		// 	content ""
		// 	// border-top 3px solid #006699
		// 	// margin 10px 0
		// 	height 4px
		// 	width 100%
		// 	background-color #006699
		// 	position relative
		li
			flex-grow 1
			flex-shrink 1
			flex-basis auto
			text-align center
			margin-left 1px
			// max-width 120px
			height 100%
			// vertical-align middle
			display inline-block
			// background-color red
		> li
			background-image linear-gradient(top,#ddd,#ddd,#ddd,#ddd,#999)	
			a
				text-align center
				vertical-align middle
				display inline-block
				color black
				font-weight 400
				font-size 13px
				font-family Arial
				height auto
				// line-height 1.4em
				padding 0 6px
				// text-transform uppercase
				&:hover
					text-decoration none
			&:hover, 
			&.active
				background-color rgba(black,0.2);
				color #000
				// border-bottom 3px solid #A6D644 //#D9385F //#A6D644
		&:after
			content ""
			height 10px
			width 100%
			position absolute
			bottom -10px		
			left 0





.menu
	// background red !important
	> li
		// background-image linear-gradient('to top',transparent,lighten(color2,15))
		position relative
		margin-right 2px
		a:hover
			color inherit !important
		// &:hover:before
		// 	content ""
		// 	position absolute
		// 	width 0
		// 	height 0
		// 	border-left 7px solid transparent
		// 	border-right 7px solid transparent
		// 	border-bottom 5px solid white
		// 	bottom 0px
		// 	left 50%			
		.submenu
			overflow hidden
			position absolute
			top 100%
			left 0px
			background white
			min-width 100%
			width auto
			z-index 5
			> li
				margin-top -30px
				transition margin-top .5s
				display block
				width 100%
				overflow hidden
				border-bottom 1px solid lighten(color6,40)
				&:before
					content ""
				&:last-child
					border-bottom 0
				> a
					color inherit
					display block
					white-space nowrap
					height 25px
					line-height @height
					font-size 0em
					transition font-size .5s,color 1s
					&:hover
						color black !important
		&:hover
			.submenu
				> li
					margin-top 0px
					color black
					> a
						font-size 0.8em










		
@media $large
	body.headfixed
		padding-top 151px
		.preheader
			display none
		header
			nav
				// background rgba(#357bb2,0.9)
				background white			
				position fixed !important
			&::before
				display none
			li
				a
					font-size 0.80em
					// padding-left 0.2em
					// padding-right 0.2em
					color black
					&:hover
						color black !important
				&.logo
					padding 0 0.5em
					a
						display inline-block
						width 120px
						height auto
						color transparent
						background url(imgs+'logo.jpg') no-repeat
						background-size contain
						line-height 100%
						margin-top 0.1em
					&:hover
						background-color transparent
						a
							color transparent	!important
					&.active
						background white


					


			

