.home_block_descuentos
	background-color #f7f7f7 !important
	padding 20px 0 0px
	> .container
		padding 1em 0.75rem
		overflow hidden
		> .card
			background transparent
			box-shadow initial
			padding 0 1em
			display flex
			flex-direction column
			> .more
				order -1
				right 23px
				width 169px !important
				top -25px
				position absolute
				@media $small
					display none
			h2
				width 100%
				// text-align center
				color red
				font-weight bold
				margin 0
				text-shadow 3px 4px 5px #fff
				font-size 20px !important
				font-family Roboto
				margin-left 32px
				@media $small
					text-align center
					margin-left 0px
			> ul.responsive	
				padding 0 2em
				// padding-top 0
				margin-top 0
				margin-bottom 0
				li.col
					.card
						border-radius 10px
						overflow hidden
						border 2px solid color2
						@media $small-medium
							max-width 800px
							height auto
							min-height initial
							margin-left auto
							margin-right auto
						a
							width 100%
							font-weight bold
						.card-image
							border 10px solid #fff
							border-bottom 0
							fit_image(180px)
							@media $small
								text-align center
								height 180px
								width 100%
								.photo
									height inherit
									display inline-flex
									align-items center
									justify-content center
									text-align center
									overflow hidden
									margin 0 auto
									width auto
									img
										flex 1 1 auto
										max-height 100%
										width auto
							img
								// visibility hidden
								transition opacity .25s,transform .25s
								// max-height 100%
						.card-content
							// padding 0
							// display flex
							// flex-direction column
							// flex-wrap wrap
							// height 40px
							.btn
								background-color transparent
								color #000
								width 100%
								overflow hidden
								box-shadow initial
								font-weight normal
								font-size 13px
							.subname
								text-align center
								// font-weight bold
								margin-bottom 5px
								margin-top -2px
								// line-height 1.5em
								display inline-block
								width 50%
								order 2
								&:before
									content "-"
							.precio
								text-align center
								display inline-block
								text-decoration line-through
								color #aaa
								width 50%
								order 1
							.precio_oferta
								color red
								font-size 16px
								width 100%
								order 3
								text-align center
						&:hover
							box-shadow 0 2px 10px 0 rgba(#000,.96), 0 2px 20px 0 rgba(#000,.12)
							.card-image
								img
									transform scale(1.1)
									opacity .8
					// @media $large
					// 	&:nth-child(4)
					// 		display none
				.slick-arrow
					position absolute
					top 38%
					color transparent
					background transparent
					outline none
					border none
					width 0
					&:before
						font-family icomoon
						font-size 2em
						position absolute
					// opacity 0
					&.slick-prev
						left 1.5em
						&:before
							content "\e666"
							color black
							right 0em
					&.slick-next
						right 1.5em
						&:before
							content "\e667"
							color black
							left 0em
							
				

				/* Dots */
				.slick-slider
					margin-bottom 30px
				.slick-dots
					position absolute
					bottom -45px
					display block
					width 100%
					padding 0
					list-style none
					text-align center
					li
						position relative
						display inline-block
						width 20px
						height 20px
						margin 0 5px
						padding 0
						cursor pointer
						button
							font-size 0
							line-height 0
							display block
							width 20px
							height 20px
							padding 5px
							cursor pointer
							color transparent
							border 0
							outline none
							background transparent
							&:hover
								outline none
								&:before
									opacity 1
							&:focus
								outline none
								&:before
									opacity 1
							&:before
								font-size: 6px;
								line-height: 20px;
								position: absolute;
								top: 0;
								left: 0;
								width: 20px;
								height: 20px;
								// content: 'â€¢';
								text-align: center;
								opacity: .25;
								color: black;
								-webkit-font-smoothing: antialiased;
								-moz-osx-font-smoothing: grayscale;
								content "."
						&.slick-active
							button:before
								opacity: .75;
								color: black;	