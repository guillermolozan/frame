article.page_post
if(post)
	div(class="post")

		if(menu_post)
			div(class="col s3 hide-on-med-and-down")

				if(group_post)
					.card-title
						h2 #{group_post}
					
				//- ul(class="menu_post collection")
					//- +menu_collection(menu_post)
				ul(class="menu_post collection collapsible collapsible-accordion",id="menu_left")
					//- +menu_collection(menu_post)
					+menu_collection_advanced(menu_post)

		div(class=menu_post?"col m12 l9":"col s12")

			if post.titleout
				div(class="card-title")
					if(main)
						h1: +item(post)
						-main=false
					else
						h2: +item(post)

			article(class="card-panel")


				if !post.titleout
					div(class="card-title")
						if(main)
							h1: +item(post)
							-main=false
						else
							h2: +item(post)

				if(post.sub)
					h3 #{post.sub}

				if post.imgfirst
					if(post.img)
						div.center-align
							img(src="#{post.img}",class="responsive-img")

				if(post.html)
					div!= post.html
				
				if !post.imgfirst
					if(post.img)
						div.center-align
							img(src="#{post.img}",class="responsive-img")

				
				if(post.pdf)
					h3 
						a(href="#{post.pdf}",target="_blank") Descargar PDF

				-li_class = "s12 m6 l6"
				include ../../jade/includes/block_gallery.jade

				
			include ../../components/form_consulta/form_consulta

- post = false

