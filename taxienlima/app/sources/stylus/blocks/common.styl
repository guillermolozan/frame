article
	> div
		strong
			font-weight 500
			

.p-emails
	.wide
		text-align center
		.lines
			display inline-block
			margin 0 auto
			a
				display block
				margin 0
				padding 0
				img
					margin 0
					padding 0
					display block
					
.container
	border-left 1px solid #ddd
	border-right 1px solid #ddd
	
	
main
	// padding-bottom 0
	margin-bottom 0 !important
	
main.container
	> .row
		margin-left 0
	
section
	.card-panel
		min-height 0

// post
.card-title
	background-color color1
	background-image linear-gradient(top,color1,lighten(color1,10))
	// margin-bottom -1.5em
	border-radius 10px 10px 0 0
	h2
		color white
		padding 0.65em 1em
	~ .card-panel
		margin-top -1.5em
	~ ul
		margin-top -1.5em !important

				
.card-panel,.card-content
	.card-title
		background none
