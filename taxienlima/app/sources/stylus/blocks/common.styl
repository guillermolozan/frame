
.more_information
	display block
	text-align right
	margin-right 1em
	position relative
	&:hover
		text-decoration none	
	&:before
		content 'Más información'
	&:after
		margin-left .5em
		vertical-align middle
	icomoonafter('e667')

.collection
	.collection-item
		padding 7px 5px
		a
			display block
			font-weight 400
			font-size 0.85em
			// color color5
		&.active
			background-color lighten(black,40)
			color white
			a
				color inherit


			

footer
	.men
		a
			color white
			margin-left 3px
	background-color #666
	container_center()
	border-radius 0
	text-align left
	color white
	line-height 1.8em
	nav 
		margin-top -30px
		height auto
		line-height auto 
		padding 0
		ul > .container
			width auto
			> li .submenu a
				color black !important
				&:hover
					color black !important
			> li a.prodiserv
				color white !important
	.asesor
		font-size .9em
	@media $large
		border-radius 0 0 20px 20px


form
	.btn
		background-color rgba(#357BB2, 1)
		&:hover
			background-color rgba(color1, 1)
	.input-field 
		label
			color black
	
			
