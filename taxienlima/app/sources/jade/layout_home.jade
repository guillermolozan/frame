				div(class="col s12 l4")
					.card
						.card-content
							.card-title
								h3 Brochure corporativo
								img(src="#{pub_img}brochure2.png")
								div: strong.descargar: a(target="_blank",href="http://taxienlima.com/taxienlima/public/img/presentacion-de-taxi-en-lima.pdf") Descargar
				
				div(class="col s12 l4")
					.card
						.card-content
							.card-title
								h3 Social
							div(
								class="fb-page",
								data-href="https://www.facebook.com/taxiremisselima24h/",
								data-tabs="timeline",
								data-small-header="false",
								data-adapt-container-width="true",
								data-hide-cover="false",
								data-show-facepile="true")

			div(class="row wide")
				div(class="col s12  bar links")
					.card-panel
						.card-title: h2 Enlaces
						.responsive
							each ite in links.items
