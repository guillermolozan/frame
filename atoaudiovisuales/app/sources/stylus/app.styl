// dirs
imgs               = '../../public/img/'
load_imgs          = '../../../public/img/'


// colors
angle              =0deg

color1             =#980204 + angle //red
color2             =#DADADA + angle //blue
color3             =#9e9e9e + angle + angle //grey
color4             =lighten(#000000,35) + angle //black
color5             =#014087 + angle
color6             =#00AFEE + angle 



// blocks
body_color         =white

// header_img_path    =load_imgs+'header-bg.jpg'
