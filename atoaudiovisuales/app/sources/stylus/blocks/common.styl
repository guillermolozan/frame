main
	// padding-bottom 0
	margin-bottom 0 !important
	
main.container
	> .row
		margin-left 0
	
section
	.card-panel
		min-height 0

// post
.card-title
	background-color color1
	background-image linear-gradient(top,color1,lighten(color1,10))
	// margin-bottom -1.5em
	border-radius 10px 10px 0 0
	h2
		color white
		padding 0.65em 1em
	~ .card-panel
		margin-top -1.5em
