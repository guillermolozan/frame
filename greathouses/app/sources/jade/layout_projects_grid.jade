include ../../../../work/sources/jade/includes.jade
doctype html
html(lang="es")

	include common/head.jade

	body(class="#{classbody}")

		include common/header.jade
		
		main(class="container row")

			-item_responsive = "col s12"
			
			.wide
				if(gallery.type=='photos')
					-ul_class='parent-container'
				else
					-ul_class=''


				div(class="grid #{gallery.type}")
					
					if(main)
						h1: +item(gallery)
						-main=false
					else
						h2: +item(gallery)


					if(gallery.sub)
						h3 #{gallery.sub}


					if(gallery.html)
						div!= gallery.html


					div(class="col m12 l3")
						include blocks/search.jade


					if(gallery.items)

						ul(class="col m12 l9 #{ul_class}")

							each item in gallery.items

								li(class="#{item_responsive}")

									div(class="card")
										div(class="card-image col l3")
											//- +img_magnific(item)
											//- +img_item(item)	
											a(href="#{item.url}"): img(src="#{item.img}",title="#{item.name}",alt="#{item.name}",class="responsive-img")
										div(class="card-content col l6")
											h3: +item(item)
											if(item.sub)
												h4 #{item.sub}
										div(class="card-content col l3")
											| #[strong Prec]: #{item.precio} #[br]
											| #[strong Tipo]: #{item.tipo} #[br]
											| #[strong Operacion]: #{item.operacion} #[br]
											| #[strong Departamento]: #{item.departamento} #[br]
											| #[strong Provincia]: #{item.provincia} #[br]
											| #[strong Distrito]: #{item.distrito} #[br]

		include common/footer.jade

		include common/foot.jade