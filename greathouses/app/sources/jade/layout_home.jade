include ../../../../work/sources/jade/includes.jade
doctype html
html(lang="es")

	include common/head.jade

	body(class="#{classbody}")

		include common/header.jade

		include blocks/breadcrumb.jade

		include blocks/search.jade

		include blocks/banner.jade

		section.line_a

			div(class="container row")

				div(class="col s8 offset-s2")
					.center-align: img(class="responsive-img",src="#{pub_img}welcome.png")
					p.center-align!= post.html
					.center-align: a(href="pagina/bienvenidos/17") Mas información

		section.line_b
			div(class="container row")
				div(class="col s12 m10 offset-m1")

					each item in iconos
						div(class="col s12 l6")
							h4: a(href="#{item.url}") #{item.nombre}
							.center-align: a(href="#{item.url}") #[img(src="#{pub_img}#{item.foto}")]
							p!= item.texto
							.right-align: a(href="#{item.url}") Mas información						

		include common/footer.jade

		include common/foot.jade
