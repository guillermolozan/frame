article.card-panel
	// box-shadow none
	.parent-container > li
		@media $large
			min-height 220px
		.card
			transition border-radius .5s, box-shadow .5s, background-color .5s, margin .2s
			box-shadow 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12)
			background-color darken(white,5)
			border-radius 15px
			&:hover
				box-shadow 0 12px 15px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19)
				background-color white
				border-radius 0
				@media $large
					margin -1px
			.card-content
				padding-top 0
				padding-bottom 0
				font-weight bold
				text-transform uppercase
.form_consulta
