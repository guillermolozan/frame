footer
	background white
	height auto
	margin-top 0px !important
	padding-top 3em !important
	padding-bottom 0
	// height auto
	// display none
	// overflow hidden
	@media $small-medium	
		padding-left 1em
		padding-right 1em
		height auto
	.container
		.menu
			a,span
				color black
			> li
				float none
				line-height 2em
		.logo
			margin-bottom 0
			@media $small-medium
				display none
			.col
				img
					width 92%
		.items
			margin-bottom 0
		.first
			> .menu
				> li > a
					padding-left 15px
					background url(imgs+'hab-item.png') no-repeat left 4px
					font-weight bold
					color black
		.second,.third
			h4
				font-size 25px
				// text_border(#111)
				color #111 !important
				font-family arial
				font-weight bold
			strong
				font-weight bold
				font-size 18px
				// text-shadow 1px 1px 5px color2
				// margin-left 0px
		.first,.second
			@media $large
				position relative
				&:after
					content ""
					width 2px
					height 140px
					background #999 
					position absolute
					right 30px
					top 50px
			@media $small-medium
				border-bottom 1px solid #999
		.second
			.email
				font-weight bold
				color black
		.third
			margin-top .5em
			li 
				font-size 17px
				// width 25px
				a
					height 33px
					padding-left 40px
					width 100%
					height 100%
					background-repeat no-repeat
					display block
					margin-bottom 10px
			li.facebook a
				background-image url(imgs+'footer-facebook.png')
			li.youtube a
				background-image url(imgs+'footer-youtube.png')
			li.twitter a
				background-image url(imgs+'footer-twitter.png')
	.down

		height auto
		background #4aafd5
		padding-top  10px
		@media $large
			background url(imgs+'footer-bg.png') no-repeat center center
			height 86px
			padding-top 55px
			
		.container
			.by
				text-align right
				margin -3px 0
			@media $large-medium
				display flex
				justify-content space-between