#slider
	.outside
		position absolute
		top 0
		width 100%
		text-align center
		height 500px
		@media $small
			height 560px
			position relative
		// border 1px solid red !important
		.container
			position relative
.home_form_reserva
	#close
		@media $small
			display none
		&:before
			
			position absolute
			right 10px
			// top 0px
			float right !important
			content "+"
			color color2
			font-size 25px
			width 20px
			height @width
			line-height @width
			display inline-block
			margin-top 5px
			transform rotate(0deg) !important
			cursor pointer
		&.active:before
			transform rotate(45deg) !important			
	.form_content
		height 0px
		overflow hidden
		padding-top 12px
		padding-top 0px
		opacity 0
		// padding-right 0
		transition all .3s
		&.active
			opacity 1
			height 210px
			@media $small
				height auto
			padding-top 12px
