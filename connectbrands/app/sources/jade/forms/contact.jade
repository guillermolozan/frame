div(class="post")
	div(class="row")
		div(class="col l10 offset-l1 m12 s12")
			+card_sended(message)
			article(class="card-panel")
				div(class="card-title")
					if(main)
						h1: a(href="#{uri}") #{title}
					else
						h2: a(href="#{uri}") #{title}
						-main=false
					if(post.html)
						div!= post.html

					div(class="row")
						form(class="col s12 l9",method="POST",name="contact")

							+form('contact',fields)

							+input_submit('ENVIAR')


