
.p-home
					
	.links
		// background-color black
		.card-panel
			padding-bottom 0
			padding-top 0.6em
		h2
			margin 0
		.responsive	
			padding-bottom 0
			padding-top 0
			.ite
				text-align center
				position relative
				padding 0 10px !important
				height 75px
				&:focus
					outline none			
				a
					height 40px !important
					line-height @height
					vertical-align middle
					img
						display inline-block
						max-height 40px
				h4
					height 10px 
					line-height @height
					text-align center
					display block
					position absolute
					bottom 0px
					width 100%
					color #9a9a9a
						
	.bar
		h1,h2
			font-size 1em
			font-weight bold
		h3
			font-size 0.9em
		h4,h5
			font-size 0.9em
			// margin-bottom 0.4em
		h6
			margin-top 0.5em
		&.sidelef
			.card
				min-height 0
				padding-left 30px
				background white url(imgs+'arrow.png') no-repeat
				h4
					min-height 0.65em
					line-height @min-height
					vertical-align middle
					font-size 1em
					color #02337a
		&.sideright
			h4
				margin-top 0
				color #02337a
				font-weight 400
				// max-height 2.1em
				// overflow hidden
			.more
				color #02337a
				font-size 1.2em
				font-weight 500

	.bloque_servicios
		table
			margin-top 7px
			tr
				border-top 1px solid #999
				td.name
					padding 1em
					width 30%
					color black
					text-align center
					vertical-align middle
					a
						color #999
						font-size 1.3em
				td.text
					// padding-top .5em
					padding-left 1em
					background-color #eee
					vertical-align top


	.wide
		.collapsible
			border-top 1px solid white
			border-right 1px solid white
			border-left 1px solid white
			box-shadow none
			.collapsible-header
				border 1px solid #ccc
				border-radius 5px
				margin-bottom 10px
				font-size 1.2em
				&:before
					float right
					font-size 1.05em
					color grey
					font-weight normal
				icomoon('f0a3')
			.collapsible-body
				border-bottom 1px solid white
				font-size 1em
				p
					padding-top 0.3rem

				

	h4
		color #0198FF
		font-size 2em
	
	.line_0
		margin-top 1em
		.img_side
			margin-top 1em
	.line_a // la mejor experiencia en ingenieria
		h3
			margin-top 2em
			margin-bottom 1em
			color color1
			// text-decoration underline
			// text-shadow 0px 4px 3px rgba(0,0,0,0.6), 0px 8px 0px rgba(0,0,0,0.1);
			text-align center
			font-size 1.5em
			font-weight 400
		p 
			font-size 0.95em
			color lighten(black,50)
		img
			width 50%
			@media $medium-small
				width auto
			margin 5px 9px 9px 0
			height auto 
			float left
		.more_information
			float left


	.line_four // noticias
		.card
			min-height 360px
			.card-title
				h3
					color color5
					margin-top 0px
					margin-bottom 1.3em
			ul
				li
					text-align left
					padding-bottom 0.5em
					padding-top 0.5em
					border-bottom 1px solid lighten(grey,30)
			.card-content
				text-align center
				img
					margin-top -30px
					margin-bottom -20px
					width 90%
					@media $medium-small
						width auto
				.descargar
					display inline-block
					background-color #039be5
					padding .3em 1.9em
					line-height 1em
					a
						display inline-block
						background-color white
						border-radius 1em
						color #039be5
						padding 0 1em
						font-size .7em
						line-height 1.5em
				.fb_iframe_widget
					margin-left -9%
					margin-right -9%

