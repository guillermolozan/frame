

// header
header
	@media $large
		height auto !important	
	nav
		background-color white
		height auto
		line-height @height
		.container
			position relative
		@media $large
			position relative !important
			background-color menu_top_bgcolor
		.button-collapse
			color color1
		h1
			display none
		.brand-logo
			img
				height 54px			
				@media $small
					height 34px
					margin-top 10px
			@media $large
				opacity 0
				width maxwide
				height header_height
				margin-top unquote('-'+ header_height)
				img
					width 100%
					height 100%
		.top
			position absolute
			right 25px
			bottom 60px
			text-align right
			h3
				margin 0 0 10px 0
				font-weight bold
			.email
				font-size 20px
				color black
				text-shadow 1px 3px 2px rgba(red,0.4)
			.whatsapp
				color lighten(black,20)
				font-size 26px
				padding-left 30px
				// text-shadow 1px 3px 2px rgba(black,4.2)
				text-shadow 1px 3px 2px rgba(red,0.4)
				&:before
					color green
					content '\e900'
					font-family icomoon
					margin-right 7px
					text-shadow initial
					font-size 23px
