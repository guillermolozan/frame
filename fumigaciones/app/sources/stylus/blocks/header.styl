.menu_top
	height menu_top_height
	margin-top 0px
	display block
	li
		height auto
		a
			color menu_top_textcolor
			font-weight 700
			font-size 0.9rem
			height menu_top_height
			line-height @height
			text-transform uppercase
			font-family
			&:hover
				text-decoration none





.menu
	// background red !important
	> li
		// background-image linear-gradient(top,transparent,lighten(color2,15))
		position relative
		margin-right 2px
		a
			font-family Roboto !important
		.submenu
			display none
			position absolute
			top 100%
			left 0px
			background white
			min-width 100%
			width auto
			> li
				display block
				width 100%
				border-bottom 1px solid color6
				&:last-child
					border-bottom 0
				>a
					display block
					white-space nowrap
					height 25px
					line-height @height
					color black
					font-size 0.9em
					font-weight 400
		&:hover
			.submenu
				display block
				





.side-nav
	left 0 !important





		
@media $large
	body.headfixed
		padding-top header_height + menu_top_height
		header
			nav
				position fixed !important
				top 0px
			&::before
				display none
					


			

