			height 100%
			// vertical-align middle
			display inline-block
			// background-color red
			> a
				padding-right 2em
				padding-left 2em
				text-align center
				vertical-align middle
				display inline-block
				color menu_top_textcolor
				font-weight 400
				font-size 1em
				// transition font-size .5s
				height 2em
				line-height @height
				padding 0 6px
				z-index 10
				&:hover
					text-decoration none
			&:hover, 
			// &.active
				background-color rgba(black,0.2);
				// border-bottom 3px solid #A6D644 //#D9385F //#A6D644
			&:last-child:after
				display none
			.submenu
				li:after
					display none
				
		&:after
			content ""
			height 10px
			width 100%
			position absolute
			bottom -10px
			left 0





