.menu_top
	height 2em
	line-height @height
	margin-top 0px
	display block
	// background-color #194D74
	// background-image linear-gradient(top,#194D74,lighten(#194D74,15))
	background #194D74 url(imgs+'bgline.jpg') repeat-x
	.container
		display flex
		> li
			flex-grow 1
			flex-shrink 1
			flex-basis auto			
			position relative
			text-align center
