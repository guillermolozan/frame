				@media $small
					height 20px
					margin-top 10px
			@media $large
				opacity 0
				width maxwide
				height header_height
				margin-top unquote('-'+ header_height)
				img
					width 100%
					height 100%
		a
			text-transform uppercase
		@media $large
			> .container::before
				display block
				background white url(imgs+'logo.png') no-repeat 32px 16px
				height 98px
				background-size 13%
				content ""	
				width 100%
		@media $small-medium	
			> .container::before
				display block
				background white url(imgs+'logo.png') no-repeat center 8px
				background-size 213px 121px
				height 152px
				content ""
				width 100%
