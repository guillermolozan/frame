.home_block_importaciones
	background transparent url(imgs+'recomendados-bg.jpg') repeat;
	// background #99CC00
	padding 20px 0 0px
	// margin-bottom 20px
	> .container
		padding 1em 0.75rem
		overflow hidden
		// background color2 url(imgs+'bg_impor.png') repeat-x center bottom;
		// background linear-gradient(top,darken(color2,20),darken(color2,20),darken(color2,20),color1);
		> .card
			box-shadow initial
			padding 0 1em
			background transparent
			display flex
			flex-direction column
			> .more
				order -1
				right 23px
				width 169px !important
				top -25px
				position absolute
				@media $small
					display none
				.btn
					// background black
					background #346284
			h2
				// width 100%
				text-align left
				color #fff !important
				font-weight bold
				margin 0
				// text-shadow 3px 4px 5px #ffffont-size: 20px !important;
				font-family Roboto
				color white
				margin-left 32px
				font-size 20px !important
				@media $small
					text-align center
					margin-left 0px
			> ul.responsive	
				padding 0 2em
				// padding-top 0
				margin-top 0
				margin-bottom 0
				li.col
					.card
						border-radius 10px
						overflow hidden
						@media $small-medium
							max-width 800px
							height auto
							min-height initial
							margin-left auto
							margin-right auto
						a
							width 100%
							font-weight bold
						.card-image
							border 10px solid #fff
							border-bottom 0
							fit_image(180px)
							@media $small
								text-align center
								height 180px
								width 100%
								.photo
									height inherit
									display inline-flex
									align-items center
									justify-content center
									text-align center
									overflow hidden
									margin 0 auto
									width auto
									img
										flex 1 1 auto
										max-height 100%
										width auto
							img
								// visibility hidden
								transition opacity .25s,transform .25s
								// max-height 100%
						.card-content
							.btn
								// background-color color1
								background-color transparent
								box-shadow initial
								color darken(color2,20)
								width 100%
								padding 0
								font-weight normal
								line-height 1.3em
								text-decoration underline
								font-size 13px
								&:hover
									color color1
							.precio
								color #406420
								text-align center
								font-weight bold
								font-size 14px
						&:hover
							box-shadow 0 2px 10px 0 rgba(#000,.96), 0 2px 20px 0 rgba(#000,.12)
							.card-image
								img
									transform scale(1.1)
									opacity .8
					@media $large
						&:nth-child(4)
							display none
				.slick-arrow
					position absolute
					top 38%
					color transparent
					background transparent
					outline none
					border none
					width 0
					&:before
						font-family icomoon
						font-size 2em
						position absolute
						color white !important
					// opacity 0
					&.slick-prev
						left 1.5em
						&:before
							content "\e666"
							color black
							right 0em
					&.slick-next
						right 1.5em
						&:before
							content "\e667"
							color black
							left 0em
				/* Dots */
				.slick-slider
					margin-bottom 30px
				.slick-dots
					position absolute
					bottom -45px
					display block
					width 100%
					padding 0
					list-style none
					text-align center
					li
						position relative
						display inline-block
						width 20px
						height 20px
						margin 0 5px
						padding 0
						cursor pointer
						button
							font-size 0
							line-height 0
							display block
							width 20px
							height 20px
							padding 5px
							cursor pointer
							color transparent
							border 0
							outline none
							background transparent
							&:hover
								outline none
								&:before
									opacity 1
							&:focus
								outline none
								&:before
									opacity 1
							&:before
								font-size: 6px;
								line-height: 20px;
								position: absolute;
								top: 0;
								left: 0;
								width: 20px;
								height: 20px;
								// content: 'â€¢';
								text-align: center;
								opacity: .25;
								color: black;
								-webkit-font-smoothing: antialiased;
								-moz-osx-font-smoothing: grayscale;
								content "."
						&.slick-active
							button:before
								opacity: .75;
								color: black;	