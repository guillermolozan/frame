

// banner
.custom_slider
	// width 600px
	position relative
	overflow hidden
	overflow auto
	background #222
	> .slider_container
		position relative
		white-space nowrap
		transition all .4s
		left 0px
		display flex
		// flex-direction column
		flex-direction row
		align-items center
		align-content center
		> .slider_slide
			display flex
			flex-direction column
			min-width 100%
			align-items center
			align-content center
			width 100%
			> *
				display block
			img
				// height 100%
				width 100%
				margin 0 auto
				display block
				// object-fit scale-down
				// max-width 100%
				// text-align center
				// box-sizing: border-box
				// object-fit content
				// height 200px
			// margin-right -4px
	> .slider_controls ul
		padding 0px
		text-align center
		position absolute
		bottom 1em
		margin 0px
		width: 100%
		z-index 5
		li
			list-style-type none
			background-color: #444
			width 20px
			height 20px
			border-radius 50%
			margin-right: 5px
			cursor pointer
			display inline-block
			&.active
				background-color skyblue

.slider_external_controls ul
	width 100%
	width 200px
	display flex
	flex-direction row
	flex-direction column
	// flex-wrap: wrap
	li
		border 1px solid black
		margin .5em
		text-align center
		background black
		// max-width 150px
		height 120px
		display flex
		align-items center
		align-content center
		img
			width 100%
			display block

.custom_calendar
	font-family Roboto
	display inline-block
	background white
	border-radius 8px
	overflow hidden
	box-shadow 0 1px 3px rgba(black,.12), 0px 1px 2px rgba(black,.24)
	header 
		background-color #555574
		padding 10px 15px
		text-align: center
		color: white
	table
		border-spacing 0
		font-size .8em
		text-align: center
	thead
		background-color: #3a3a59
		color white
	td
		padding: 4px
	tr td 
		border solid 1px #f5f5f5
	button 
		display inline-block
		width 50%
		border none 
		outline none 
		background-color: #ef3f61
		color white
		cursor pointer
		padding 6px
		&:hover
			background-color: #db3b61

