// banner
.custom_slider
	// width 600px
	position relative
	overflow hidden
	overflow auto
	background #222
	> .slider_container
		position relative
		white-space nowrap
		transition all .4s
		left 0px
		display flex
		// flex-direction column
		flex-direction row
		align-items center
		align-content center
		> .slider_slide
			display flex
			flex-direction column
			align-items center
			align-content center
			min-width 100%
			// width 100%
			> *
				display block
			img
				// height 100%
				width 100%
				margin 0 auto
				display block
				// object-fit scale-down
				// max-width 100%
				// text-align center
				// box-sizing: border-box
				// object-fit content
				// height 200px
			// margin-right -4px
	
	> .slider_controls ul
		padding 0px
		text-align center
		position absolute
		bottom 1em
		margin 0px
		width: 100%
		z-index 5
		li
			list-style-type none
			background-color: #444
			width 20px
			height @width
			border-radius 50%
			margin-right: 1em
			cursor pointer
			display inline-block
			&.active
				background-color skyblue
	> .slider_button_left, > .slider_button_right
		--button:70px
		position absolute
		width var(--button)
		height var(--button)
		top calc(50% - var(--button)/2 )
		border-radius 50%;
		background red	
		cursor pointer
	> .slider_button_left
		left 20px;
	> .slider_button_right
		right 20px

		

.slider_external_controls ul
	width 100%
	display flex
	flex-direction row
	li
		border 1px solid white
		margin 1em
		text-align center
		background black
		// max-width 150px
		max-height 100px
		min-height 50px
		overflow hidden
		display flex
		align-items center
		align-content center
		cursor pointer
		&.active
			border-color yellow
		img
			width 100%
			display block
// calendar
.custom_calendar
	font-family Roboto
	display inline-block
	background white
	border-radius 8px
	overflow hidden
	box-shadow 0 1px 3px rgba(black,.12), 0px 1px 2px rgba(black,.24)
	header 
		background-color #555574
		padding 10px 15px
		text-align: center
		color: white
	table
		border-spacing 0
		font-size .8em
		text-align: center
	thead
		background-color: #3a3a59
		color white
	td
		padding: 4px
	tr td 
		border solid 1px #f5f5f5
	button 
		display inline-block
		width 50%
		border none 
		outline none 
		background-color: #ef3f61
		color white
		cursor pointer
		padding 6px
		&:hover
			background-color: #db3b61
// nav
nav 
	transition all 1s
	&.pined
		position: fixed
		top 0px
		left 0

