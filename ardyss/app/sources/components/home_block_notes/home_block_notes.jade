section.home_block_notes.row
	.container
		if(noticias)
			.col.s12.l4.noticias
				+list_card(noticias)

		if(brochure)
			.col.s12.l4.brochure
				.card
					.card-content
						.card-title
							h3 Brochure corporativo
						img(src="#{pub_img}#{brochure.img}")
						div: strong.descargar: a(target="_blank",href="#{brochure.file}") Descargar

		if(youtube)
			.col.s12.l4.youtube
				.card
					.card-content
						.card-title
							h3 #{youtube.name}
						.video-container
							iframe(width="853",height="480",src="//www.youtube.com/embed/#{youtube.code}?rel=0",frameborder="0",allowfullscreen="allowfullscreen")
		
		if(downloads)
			.col.s12.l4.downloads
				.card
					.card-content
						.card-title
							h3 Descargas
					.slider
						ul.slides
							each item in downloads
								li
									if !item.url || item.url=='pagina//'
										img(class="desktop",src="#{item.img}")
									else
										a(href="#{item.url}"): img(aclass="desktop",src="#{item.img}")

		if(social)
			.col.s12.l4.social
				.card
					.card-content
						.card-title
							h3 Social
						if (!localhost)
							div(
								class="fb-page",
								data-href="#{social}",
								data-tabs="timeline",
								data-small-header="false",
								data-adapt-container-width="true",
								data-hide-cover="false",
								data-show-facepile="true")
